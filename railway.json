{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "app",
      "builder": "DOCKERFILE",
      "env": {
        "SITE_NAME": "${{RAILWAY_PUBLIC_DOMAIN}}",
        "DB_HOST": "${{db.MYSQLHOST}}",
        "DB_PORT": "${{db.MYSQLPORT}}",
        "DB_DATABASE": "${{db.MYSQLDATABASE}}",
        "DB_USER": "${{db.MYSQLUSER}}",
        "DB_PASSWORD": "${{db.MYSQLPASSWORD}}",
        "ADMIN_PASSWORD": "${{ADMIN_PASSWORD}}",
        "REDIS_HOST": "${{redis.REDISHOST}}",
        "REDIS_PORT": "${{redis.REDISPORT}}"
      }
    },
    {
      "name": "db",
      "service": "mariadb"
    },
    {
      "name": "redis",
      "service": "redis"
    }
  ]
}
