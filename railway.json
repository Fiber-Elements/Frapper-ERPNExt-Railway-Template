{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "app",
      "builder": "DOCKERFILE",
      "env": {
        "SITE_NAME": "${{RAILWAY_PUBLIC_DOMAIN}}",
        "MARIADB_HOST": "${{services.db.host}}",
        "MARIADB_PORT": "${{services.db.port}}",
        "MARIADB_DATABASE": "${{services.db.database}}",
        "MARIADB_USER": "${{services.db.user}}",
        "MARIADB_PASSWORD": "${{services.db.password}}",
        "REDIS_HOST": "${{services.redis.host}}",
        "REDIS_PORT": "${{services.redis.port}}"
      }
    },
    {
      "name": "db",
      "service": "mariadb"
    },
    {
      "name": "redis",
      "service": "redis"
    }
  ]
}
